/**
 * Node Class
 * @author Mikael Hinton
 *
 */
public class Node {
	
	Object item;
	Node next;
	
	/*
	 * Constructor
	 */
	protected Node(Object newItem)
	{
		item = newItem;
		next = null;
	}//End of node
	
	/*
	 * Constructor
	 */
	protected Node(Object newItem, Node nextNode)
	{
		item = newItem;
		next = nextNode;
	}
	
	/*
	 * Getter next
	 */
	protected Node getNext()
	{
		return next;
	}
	
	/*
	 * Getter item
	 */
	protected Object getItem()
	{
		return item;
	}
	
	/*
	 * Setter next
	 */
	protected void setNext(Node nextNode)
	{
		next = nextNode;
	}
	
	/*
	 * Setter item
	 */
	protected void setItem(Object newItem)
	{
		item = newItem;
	}
}//EOF
